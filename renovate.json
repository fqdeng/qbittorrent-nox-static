{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "schedule": [
    "every weekday"
  ],
  "pinDigests": true,
  "separateMajorMinor": false,
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": true
    },
    {
      "matchManagers": [
        "npm"
      ],
      "matchFileNames": [
        "docs/**"
      ],
      "enabled": false
    }
  ]
}
